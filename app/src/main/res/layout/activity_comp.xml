<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#62b53f"
    android:layout_height="match_parent"
    tools:context="kola.com.tictactoe.comp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HELLO WELCOME TO SINGLE PLAYER"
        tools:layout_editor_absoluteX="16dp"
android:textColor="#4f3fb5"
        android:textSize="22dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_above="@+id/Computer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/I"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:text="START"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_toEndOf="@+id/tx" />

    <Button
        android:id="@+id/Computer"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_above="@+id/b4"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:id="@+id/b1"


        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:width="120dp"
        android:height="120dp"
        android:layout_above="@+id/b6"
        android:layout_alignStart="@+id/b6" />

    <ImageButton
        android:id="@+id/b2"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:text=""
        android:width="120dp"
        android:height="120dp"
        android:layout_alignTop="@+id/b1"
        android:layout_toStartOf="@+id/b1" />

    <ImageButton
        android:id="@+id/b3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:width="120dp"
        android:height="120dp"
        android:text=""
        android:layout_above="@+id/tx"
        android:layout_toStartOf="@+id/b8"
        android:layout_marginBottom="25dp" />

    <ImageButton
        android:id="@+id/b4"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:text=""
        android:width="120dp"
        android:height="120dp"
        android:layout_above="@+id/b2"
        android:layout_toStartOf="@+id/b2" />

    <ImageButton
        android:id="@+id/b5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:width="120dp"
        android:height="120dp"
        android:text=""

        android:layout_alignTop="@+id/b9"
        android:layout_toEndOf="@+id/b7" />

    <ImageButton
        android:id="@+id/b6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:width="120dp"
        android:height="120dp"

        android:text=""

        android:layout_alignTop="@+id/b8"
        android:layout_toEndOf="@+id/b8" />

    <ImageButton
        android:id="@+id/b7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""

        android:width="120dp"
        android:height="120dp"
        android:layout_below="@+id/b4"
        android:layout_alignStart="@+id/b3" />

    <ImageButton
        android:id="@+id/b8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:width="120dp"

        android:height="120dp"
        android:layout_alignTop="@+id/b3"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/b9"

        android:width="120dp"

        android:height="120dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text=""
        android:layout_above="@+id/b1"
        android:layout_toEndOf="@+id/b2" />


    <TextView
        android:id="@+id/tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
        android:text="YOU START"
        android:textColor="#4f3fb5"
        android:textStyle="italic"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/b3"
        android:layout_marginBottom="52dp" />

    <Button
        android:id="@+id/re"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:text="RESET"

        android:textStyle="bold"
        android:layout_alignTop="@+id/tx"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="21dp" />

</RelativeLayout>
